@model DateTime
@{
    ViewData["Title"] = "Blocked";
}

<div class="row" style="margin-top: 15%">
	<div class="col s12 m3">

	</div>
	<div class="col s12 m6">
		<div class="card darken-4 teal">
			@using (Html.BeginForm("Auth", "Login", null, FormMethod.Post, true, null))
			{
				<div class="card-action center-align">
					<span class="card-title white-text">
						Your account has been suspended until @Model.ToString("g") UTC!
					</span>
				</div>
				Html.EndForm();
			}
		</div>
	</div>
	<div class="col s12 m3">

	</div>
</div>