@{
	ViewData["Title"] = "Login";
}

<div class="row" style="margin-top: 13%">
	<div class="col s12 m4">

	</div>
	<div class="col s12 m4">
		<div class="card darken-4 teal">
			@using (Html.BeginForm("Auth", "Login", null, FormMethod.Post, true, null))
			{
				<div class="card-action">
					<span class="card-title white-text">
						Authenticate
					</span>
				</div>
				<div class="card-content">
					<div class="input-field">
						<input placeholder="Enter the sms token..." id="token" name="token" type="text" class="validate white-text" required="required">
						<label for="token">SMS Token</label>
						<span class="helper-text" data-error="Please enter the token!" data-success=""></span>
					</div>
				</div>
				<div class="card-action">
					<input type="submit" class="btn btn-flat text-darken-3 yellow-text" value="Login" />
				</div>
				Html.EndForm();
			}
		</div>
	</div>
	<div class="col s12 m4">

	</div>
</div>