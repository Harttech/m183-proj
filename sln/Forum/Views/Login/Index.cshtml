@{
	ViewData["Title"] = "Login";
}

<div class="row" style="margin-top: 10%">
	<div class="col s12 m4">

	</div>
	<div class="col s12 m4">
		<div class="card darken-4 teal">
			@using (Html.BeginForm("Index", "Login", null, FormMethod.Post, true, null))
			{
				<div class="card-action">
					<span class="card-title white-text">
						Login
					</span>
				</div>
				<div class="card-content">
					<div class="input-field">
						<input placeholder="Enter your username..." id="username" name="username" type="text" class="validate white-text" required="required">
						<label for="username">Username</label>
						<span class="helper-text" data-error="Please enter a username!" data-success=""></span>
					</div>
					<div class="input-field">
						<input placeholder="Enter your password..." id="password" name="password" type="password" class="validate white-text" required="required">
						<label for="password">Password</label>
						<span class="helper-text" data-error="Please enter a password!" data-success=""></span>
					</div>
				</div>
				<div class="card-action">
					<input type="submit" class="btn btn-flat text-darken-3 yellow-text" value="Login" />
					<span class="white-text">Don't have an account? @Html.ActionLink("Register here!", "Index", "Register")</span>
				</div>
				<div class="card-action">
					<span class="card-title white-text">
						Quick Logins
					</span>
					@Html.ActionLink("Member", "Quick", "Login", new { id = "Member" }, new { @class = "btn" })
					@Html.ActionLink("Moderator", "Quick", "Login", new { id = "Moderator" }, new { @class = "btn" })
					@Html.ActionLink("Administrator", "Quick", "Login", new { id = "Admin" }, new { @class = "btn" })
				</div>
				Html.EndForm();
			}
		</div>
	</div>
	<div class="col s12 m4">

	</div>
</div>